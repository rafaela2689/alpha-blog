<div class="container">
	<div class="row justify-content-center">
		<div class="col-10">
		  <%= render 'shared/errors', obj: @article %>
			<%= form_with(model: @article, class: "shadow p-3 mb-3 bg-white rounded", local: true) do |f| %>
				<div class="form-group row">
					<%= f.label :title, class: "col-2 col-form-label" %>
					<div class="col-10">
							<%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
					</div>
				</div>
				<div class="form-group row">
					<%= f.label :description, class: "col-2 col-form-label" %><br>
					<div class="col-10">
							<%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
					</div>
				</div>
				<div class="form-group row justify-content-center">
					<div class="col-10">
							<%= f.submit class: "btn btn-outline-success btn-lg" %>
					</div>
				</div>
			<% end %>

			<div class="mb-3">
				<%= link_to '[ Cancel and return to articles list ]', articles_path, class: "text-info" %>
			</div>
		</div>
	</div>
</div>

